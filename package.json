{
  "name": "fe-monorepo",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/components/*",
    "packages/utilities/*"
  ],
  "scripts": {
    "test": "jest ./packages",
    "test:watch": "yarn test --watch",
    "test:regression": "jest /.storybook/storyshots.spec.ts",
    "test:visual-regression": "jest ./.storybook/imageshots.spec.ts",
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:css": "stylelint --fix 'packages/**/*.css'",
    "lint:ts": "eslint --fix packages/**/*.ts",
    "format:check": "prettier \"**/*.{css,ts,js}\"",
    "format:fix": "prettier --write \"**/*.{css,ts,js}\"",
    "dev": "start-storybook -p 6006",
    "build": "build-storybook --quiet -o dist",
    "prepare": "husky install",
    "cz": "git cz",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaveBitter/fe-monorepo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DaveBitter/@davebitter/issues"
  },
  "homepage": "https://github.com/DaveBitter/fe-monorepo#readme",
  "dependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@changesets/cli": "^2.23.0",
    "@manypkg/cli": "^0.19.1",
    "@open-wc/testing-helpers": "^2.1.2",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-storyshots": "^6.5.9",
    "@storybook/addon-storyshots-puppeteer": "^6.5.9",
    "@storybook/builder-webpack4": "^6.5.9",
    "@storybook/manager-webpack4": "^6.5.9",
    "@storybook/web-components": "^6.5.9",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/user-event": "^14.2.6",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "babel-loader": "^8.2.5",
    "commitizen": "^4.2.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "lit-element": "^3.2.1",
    "lit-element-state-decoupler": "^2.0.2",
    "lit-html": "^2.2.6",
    "prettier": "^2.7.1",
    "puppeteer": "^15.4.0",
    "pure-lit": "^2.0.7",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "testing-library__dom": "^7.29.4-beta.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
